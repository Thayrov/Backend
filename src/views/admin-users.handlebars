<style>
  .user-management { width: 80%; margin: 0 auto; margin-top: 20px; padding: 20px; box-shadow: 0px
  0px 10px rgba(0, 0, 0, 0.1); background-color: #24292E; border-radius: 10px; color: white; }
  .user-management h1 { text-align: center; font-size: 24px; margin-bottom: 20px; } .user-management
  table { width: 100%; border-collapse: collapse; margin-bottom: 20px; } .user-management th,
  .user-management td { border: 1px solid #ccc; padding: 10px; text-align: left; } .button-link {
  padding: 10px; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor:
  pointer; } .button-link:hover { background-color: #45a049; }
</style>

<div class='user-management'>
  <h1>Manage Users</h1>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
          <td>{{this.email}}</td>
          <td>{{this.role}}</td>
          <td>
            <button class='button-link' onclick="changeRole('{{this._id}}')">Toggle Role</button>
            <button class='button-link' onclick="deleteUser('{{this._id}}')">Delete</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <script src='/js/userManagement.js'></script>

</div>